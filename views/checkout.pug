include ./navbar

section.hero-wrap.hero-wrap-2(style="background-image: url('./images/bg_final2.png');" data-stellar-background-ratio='0.5')
  .overlay
  .container
    .row.no-gutters.slider-text.align-items-end.justify-content-center
      .col-md-9.ftco-animate.mb-5.text-center
        p.breadcrumbs.mb-0
          span.mr-2
            a(href='index.html')
              | Home 
              i.fa.fa-chevron-right
          span
            | Checkout 
            i.fa.fa-chevron-right
          span
            | Payment
            i.fa.fa-chevron-right
        h2.mb-0.bread Payment

section.ftco-section
  .container
    .row.justify-content-center
      .col-xl-10.ftco-animate
        form.billing-form(action='#')
          h3.mb-4.billing-heading Billing Details
          .row.align-items-end
            .col-md-6
              .form-group
                label(for='firstname') Firt Name
                input.form-control(type='text' placeholder='')
            .col-md-6
              .form-group
                label(for='lastname') Last Name
                input.form-control(type='text' placeholder='')
            .w-100
            .col-md-12
              .form-group
                label(for='country') State / Country
                .select-wrap
                  .icon
                    span.ion-ios-arrow-down
                  select.form-control(name='' id='')
                    option(value='qld') Queensland
                    option(value='vic') Victoria
                    option(value='sa') South Australia
                    option(value='wa') Western Australia
                    option(value='nsw') New South Wales
                    option(value='nt') Northern Territory
                    option(value='tas') Tasmania
                    option(value='act') Australian Capital Territory 
            .w-100
            .col-md-6
              .form-group
                label(for='streetaddress') Street Address
                input.form-control(type='text' placeholder='House number and street name')
            .col-md-6
              .form-group
                input.form-control(type='text' placeholder='Appartment, suite, unit etc: (optional)')
            .w-100
            .col-md-6
              .form-group
                label(for='towncity') Town / City
                input.form-control(type='text' placeholder='')
            .col-md-6
              .form-group
                label(for='postcodezip') Postcode / ZIP *
                input.form-control(type='text' placeholder='')
            .w-100
            .col-md-6
              .form-group
                label(for='phone') Phone
                input.form-control(type='text' placeholder='')
            .col-md-6
              .form-group
                label(for='emailaddress') Email Address
                input.form-control(type='text' placeholder='')
            .w-100
            .col-md-12
              .form-group.mt-4
                .radio
                  label.mr-3
                  label
                    input(id='shippingAddress' type='checkbox' name='optradio')
                    |  Ship to different address
            .col-md-6.shippingAddress
              .form-group
                label(for='streetaddress') Shipping Address
                input.form-control(type='text' placeholder='House number and street name')
            .col-md-6.shippingAddress
              .form-group
                input.form-control(type='text' placeholder='Appartment, suite, unit etc: (optional)')
            .w-100
            .col-md-6.shippingAddress
              .form-group
                label(for='towncity') Town / City
                input.form-control(type='text' placeholder='')
            .col-md-6.shippingAddress
              .form-group
                label(for='postcodezip') Postcode / ZIP *
                input.form-control(type='text' placeholder='')
        // END
        .row.mt-5.pt-3.d-flex
          .col-md-6.d-flex
            .cart-detail.cart-total.p-3.p-md-4
              h3.billing-heading.mb-4 Cart Total
              p.d-flex
                span Subtotal
                span= `$${totalCost}`
              p.d-flex
                span Delivery
                if delivery
                  span $9.99
                else
                  span $0.00
              hr
              p.d-flex.total-price
                span Total
                if delivery
                  span= `$${(totalCost + 9.99).toFixed(2)}`
                else
                  span= `$${totalCost}`
          .col-md-6
            .cart-detail.p-3.p-md-4
              h3.billing-heading.mb-4 Payment Method
              .form-group
                .col-md-12
                  .radio
                    label
                      input.mr-2(type='radio' name='optradio')
                      |  Direct Bank Tranfer
              .form-group
                .col-md-12
                  .radio
                    label
                      input.mr-2(type='radio' name='optradio')
                      |  Check Payment
              .form-group
                .col-md-12
                  .radio
                    label
                      input.mr-2(type='radio' name='optradio')
                      |  Paypal
              p
                button.btn.btn-primary.py-3.px-4(onClick='displayCheckoutError()') Place an order
              p#checkoutError
      // .col-md-8

include ./footer

