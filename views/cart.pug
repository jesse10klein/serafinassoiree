include ./navbar

section.hero-wrap.hero-wrap-2(style="background-image: url('images/bg_2.jpg');" data-stellar-background-ratio='0.5')
  .overlay
  .container
    .row.no-gutters.slider-text.align-items-end.justify-content-center
      .col-md-9.ftco-animate.mb-5.text-center
        p.breadcrumbs.mb-0
          span.mr-2
            a(href='index.html')
              | Home 
              i.fa.fa-chevron-right
          span
            | Cart 
            i.fa.fa-chevron-right
        h2.mb-0.bread My Cart

section.ftco-section
  .container
    .row
      .table-wrap
        table.table
          thead.thead-primary
            tr
              th &nbsp;
              th &nbsp;
              th Product
              th Price
              th Quantity
              th total
              th &nbsp;
          tbody

            each item in cart.cartItems
              tr.alert(role='alert')
              td
                label.checkbox-wrap.checkbox-primary
                  input(type='checkbox' checked='')
                  span.checkmark
              td
                .img(style=`background-image: url(images/${item.imageURL});`)
              td
                .email
                  span= `${item.title}`
                  span= `${item.description}`
              td $44.99
              td.quantity
                .input-group
                  input.quantity.form-control.input-number(type='text' name='quantity' value=`${item.quantity}` min='1' max='100')
              td= `$${item.price}`
              td
                button.close(type='button' data-dismiss='alert' aria-label='Close')
                  span(aria-hidden='true')
                    i.fa.fa-close
    .row.justify-content-end
      .col.col-lg-5.col-md-6.mt-5.cart-wrap.ftco-animate
        .cart-total.mb-3
          h3 Cart Totals
          p.d-flex
            span Subtotal
            span $20.60
          p.d-flex
            span Delivery
            span $0.00
          p.d-flex
            span Discount
            span $3.00
          hr
          p.d-flex.total-price
            span Total
            span $17.60
        p.text-center
          a.btn.btn-primary.py-3.px-4(href='checkout.html') Proceed to Checkout

include ./footer

#ftco-loader.show.fullscreen
  svg.circular(width='48px' height='48px')
    circle.path-bg(cx='24' cy='24' r='22' fill='none' stroke-width='4' stroke='#eeeeee')
    circle.path(cx='24' cy='24' r='22' fill='none' stroke-width='4' stroke-miterlimit='10' stroke='#F96D00')
