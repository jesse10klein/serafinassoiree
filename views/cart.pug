include ./navbar

section.hero-wrap.hero-wrap-2(style="background-image: url('./images/bg_final2.png');" data-stellar-background-ratio='0.5')
  .overlay
  .container
    .row.no-gutters.slider-text.align-items-end.justify-content-center
      .col-md-9.ftco-animate.mb-5.text-center
        p.breadcrumbs.mb-0
          span.mr-2
            a(href='index.html')
              | Home 
              i.fa.fa-chevron-right
          span
            | Checkout 
            i.fa.fa-chevron-right
        h2.mb-0.bread My Cart

section.ftco-section
  .container
    if cart.empty
      .row
        .table-wrap
          table.table
            thead.thead-primary
              tr
                th &nbsp;
                th Product
                th Price
                th Quantity
                th Total
                th &nbsp;
            each item in cart.cartItems 
              tbody
                td
                  .img(style=`background-image: url(/images/${item.imageURL});`)
                td
                  .email
                    span= `${item.title}`
                    span= `${item.collection}`
                if item.onSale
                  td= `$${item.salePrice}`
                else 
                  td= `$${item.price}`
                td.quantity
                  .input-group
                    span= `${item.quantity}`
                td.itemTotalPrice= `$${item.totalPrice}`
                td
                  button.close(id=`${item.id}` type='button' data-dismiss='alert' aria-label='Close' onClick='removeCartItem(this)')
                    span(aria-hidden='true')
                      i.fa.fa-close
      .row.justify-content-end
      
        .col.col-lg-6.col-md-6.mt-5.cart-wrap.ftco-animate
          h4.product-select Select Delivery option
              p(style='display: none' id='totalCost')= `${totalCost}`
              select.selectpicker()
                  option(selected='selected' value='0') Local Pickup FREE
                  option(value='9.99') Local Postal $9.99

        .col.col-lg-6.col-md-6.mt-5.cart-wrap.ftco-animate
          .cart-total.mb-3
            h3 Cart Totals
            p.d-flex
              span Subtotal
              span#subtotalCost= `$${totalCost}`
            p.d-flex
              span Delivery
              span#deliveryFee $0.00
            hr
            p.d-flex.total-price
              span Total
              span#finalTotalCost= `$${totalCost}`
          p.text-center
            button.btn.btn-primary.py-3.px-4(onClick='redirectToCheckout()') Proceed to Checkout
    else
      #emptyCart
        h1= "Your cart is empty!"
        h2= "In order to checkout you need to add some items to your cart"

include ./footer

#ftco-loader.show.fullscreen
  svg.circular(width='48px' height='48px')
    circle.path-bg(cx='24' cy='24' r='22' fill='none' stroke-width='4' stroke='#eeeeee')
    circle.path(cx='24' cy='24' r='22' fill='none' stroke-width='4' stroke-miterlimit='10' stroke='#F96D00')
