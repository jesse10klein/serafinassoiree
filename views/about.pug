include ./navbar

section.hero-wrap.hero-wrap-2(style="background-image: url('images/bg_final2.png');" data-stellar-background-ratio='0.5')
  .overlay
  .container
    .row.no-gutters.slider-text.align-items-end.justify-content-center
      .col-md-9.ftco-animate.mb-5.text-center
        p.breadcrumbs.mb-0
          span.mr-2
            a(href='index.html')
              | Home 
              i.fa.fa-chevron-right
          span
            | About us 
            i.fa.fa-chevron-right
        h2.mb-0.bread About Us

//include ./intro

include ./about-content

include ./product-types

include ./testimonials

section#section-counter.ftco-counter.ftco-section.ftco-no-pt.ftco-no-pb.img.bg-light
  .container
    .row
      .col-md-6.col-lg-3.justify-content-center.counter-wrap.ftco-animate
        .block-18.py-4.mb-4
          .text.align-items-center
            strong.number(data-number='3000') 0
            span Our Satisfied Customers
      .col-md-6.col-lg-3.justify-content-center.counter-wrap.ftco-animate
        .block-18.py-4.mb-4
          .text.align-items-center
            strong.number(data-number='115') 0
            span Years of Experience
      .col-md-6.col-lg-3.justify-content-center.counter-wrap.ftco-animate
        .block-18.py-4.mb-4
          .text.align-items-center
            strong.number(data-number='100') 0
            span Kinds of Liquor
      .col-md-6.col-lg-3.justify-content-center.counter-wrap.ftco-animate
        .block-18.py-4.mb-4
          .text.align-items-center
            strong.number(data-number='40') 0
            span Our Branches

include ./footer

