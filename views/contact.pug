include ./navbar

section.hero-wrap.hero-wrap-2(style="background-image: url('images/bg_2.jpg');" data-stellar-background-ratio='0.5')
  .overlay
  .container
    .row.no-gutters.slider-text.align-items-end.justify-content-center
      .col-md-9.ftco-animate.mb-5.text-center
        p.breadcrumbs.mb-0
          span.mr-2
            a(href='index.html')
              | Home 
              i.fa.fa-chevron-right
          span
            | Contact Us 
            i.fa.fa-chevron-right
        h2.mb-0.bread Contact Us
section.ftco-section.bg-light
  .container
    .row.justify-content-center
      .col-md-12
        .wrapper.px-md-4
          .row.mb-5
            .col-md-3
              .dbox.w-100.text-center
                .icon.d-flex.align-items-center.justify-content-center
                  span.fa.fa-map-marker
                .text
                  p
                    span Address:
                    |  198 West 21th Street, Suite 721 New York NY 10016
            .col-md-3
              .dbox.w-100.text-center
                .icon.d-flex.align-items-center.justify-content-center
                  span.fa.fa-phone
                .text
                  p
                    span Phone:
                    a(href='tel://1234567920') + 1235 2355 98
            .col-md-3
              .dbox.w-100.text-center
                .icon.d-flex.align-items-center.justify-content-center
                  span.fa.fa-paper-plane
                .text
                  p
                    span Email:
                    a(href='mailto:info@yoursite.com') info@yoursite.com
            .col-md-3
              .dbox.w-100.text-center
                .icon.d-flex.align-items-center.justify-content-center
                  span.fa.fa-globe
                .text
                  p
                    span Website
                    a(href='#') yoursite.com
          .row.no-gutters
            .col-md-7
              .contact-wrap.w-100.p-md-5.p-4
                h3.mb-4 Contact Us
                form#contactForm.contactForm(method='POST' name='contactForm')
                  .row
                    .col-md-6
                      .form-group
                        label.label(for='name') Full Name
                        input#name.form-control(type='text' name='name' placeholder='Name')
                    .col-md-6
                      .form-group
                        label.label(for='email') Email Address
                        input#email.form-control(type='email' name='email' placeholder='Email')
                    .col-md-12
                      .form-group
                        label.label(for='subject') Subject
                        input#subject.form-control(type='text' name='subject' placeholder='Subject')
                    .col-md-12
                      .form-group
                        label.label(for='#') Message
                        textarea#message.form-control(name='message' cols='30' rows='4' placeholder='Message')
                    .col-md-12
                      .form-group
                        input.btn.btn-primary(type='submit' value='Send Message')
                        .submitting
            .col-md-5.order-md-first.d-flex.align-items-stretch
              #map.map

include ./footer

#ftco-loader.show.fullscreen
  svg.circular(width='48px' height='48px')
    circle.path-bg(cx='24' cy='24' r='22' fill='none' stroke-width='4' stroke='#eeeeee')
    circle.path(cx='24' cy='24' r='22' fill='none' stroke-width='4' stroke-miterlimit='10' stroke='#F96D00')
