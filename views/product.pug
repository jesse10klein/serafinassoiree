include ./navbar

section.hero-wrap.hero-wrap-2(style="background-image: url('/images/bg_final2.png');" data-stellar-background-ratio='0.5')
  .overlay
  .container
    .row.no-gutters.slider-text.align-items-end.justify-content-center
      .col-md-9.ftco-animate.mb-5.text-center
        p.breadcrumbs.mb-0
          span.mr-2
            a(href='index.html')
              | Home 
              i.fa.fa-chevron-right
          span
            | Products 
            i.fa.fa-chevron-right
        h2.mb-0.bread Products

section.ftco-section
  .container
    .row
      .col-md-12
        .row.mb-4
          .col-md-12.d-flex.justify-content-between.align-items-center
            h4.product-select Select Collection
            select.selectpicker()
              if selected.all
                option(selected='selected') All
              else 
                option All
              if selected.new
                option(selected='selected') New Arrivals
              else 
                option New Arrivals
              if selected.sale
                option(selected='selected') Sale
              else 
                option Sale
              if selected.spring
                option(selected='selected') Spring
              else 
                option Spring
              if selected.autumn
                option(selected='selected') Autumn
              else 
                option Autumn
              if selected.summer
                option(selected='selected') Summer
              else 
                option Summer
              if selected.winter
                option(selected='selected') Winter
              else 
                option Winter
        .row
          if products
            each item in products
              .col-md-4.d-flex
                .product.ftco-animate
                  a.itemLink(href=`/product/${item.id}`)
                    p.productID(style='display: none')= item.id
                    .img.d-flex.align-items-center.justify-content-center(style=`background-image: url(/images/${item.imageURL});`)
                        p.viewItem= "View Item"
                    .text.text-center
                      if item.onSale
                        span.sale Sale
                      span.category= `${item.collection}`
                      h2= `${item.title}`
                      p.mb-0
                        if item.onSale
                          span.price.price-sale= `$${item.salePrice}  `
                        span.price= `$${item.price}`
          else
            .col-md-12.d-flex
              h2= "There are currently no items in that collection"
            .col-md-12.d-flex
              h3= "Please select another collection"

        //if products
          .row.mt-5
            .col.text-center
              .block-27
                ul
                  li
                    a(href='#') &lt;
                  li.active
                    span 1
                  li
                    a(href='#') 2
                  li
                    a(href='#') 3
                  li
                    a(href='#') 4
                  li
                    a(href='#') 5
                  li
                    a(href='#') &gt;
      

include ./footer

